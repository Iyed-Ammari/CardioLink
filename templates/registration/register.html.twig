{% extends 'base.html.twig' %}

{% block title %}Register - CardioLink{% endblock %}

{% block body %}
<div class="auth-container">
    <div class="auth-form">
        <h1>Create Account</h1>
        <p>Join CardioLink and take control of your cardiac health today.</p>
        
        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="alert alert-danger">
                ‚ö†Ô∏è {{ flash_error }}
            </div>
        {% endfor %}

        {% if registrationForm.vars.errors|length > 0 %}
            <div class="alert alert-danger">
                ‚ö†Ô∏è Please correct the errors below to continue.
            </div>
        {% endif %}

        {{ form_start(registrationForm, {'attr': {'novalidate': 'novalidate'}}) }}
        
            <div class="form-group">
                {{ form_label(registrationForm.email, 'Email Address') }}
                {{ form_widget(registrationForm.email, {'attr': {'placeholder': 'you@example.com', 'autocomplete': 'email'}}) }}
                {% if registrationForm.email.vars.errors|length > 0 %}
                    <div style="color: #F82239; font-size: 0.875rem; margin-top: 0.5rem;">
                        {{ form_errors(registrationForm.email) }}
                    </div>
                {% endif %}
            </div>

            <div class="form-group">
                {{ form_label(registrationForm.plainPassword, 'Password') }}
                {{ form_widget(registrationForm.plainPassword, {'attr': {'placeholder': 'Enter a strong password', 'autocomplete': 'new-password'}}) }}
                {% if registrationForm.plainPassword.vars.errors|length > 0 %}
                    <div style="color: #F82239; font-size: 0.875rem; margin-top: 0.5rem;">
                        {{ form_errors(registrationForm.plainPassword) }}
                    </div>
                {% endif %}
            </div>

            <div class="form-group">
                {{ form_label(registrationForm.nom, 'Last Name') }}
                {{ form_widget(registrationForm.nom, {'attr': {'placeholder': 'Your last name'}}) }}
                {% if registrationForm.nom.vars.errors|length > 0 %}
                    <div style="color: #F82239; font-size: 0.875rem; margin-top: 0.5rem;">
                        {{ form_errors(registrationForm.nom) }}
                    </div>
                {% endif %}
            </div>

            <div class="form-group">
                {{ form_label(registrationForm.prenom, 'First Name') }}
                {{ form_widget(registrationForm.prenom, {'attr': {'placeholder': 'Your first name'}}) }}
                {% if registrationForm.prenom.vars.errors|length > 0 %}
                    <div style="color: #F82239; font-size: 0.875rem; margin-top: 0.5rem;">
                        {{ form_errors(registrationForm.prenom) }}
                    </div>
                {% endif %}
            </div>

            <div class="form-group">
                {{ form_label(registrationForm.tel, 'Phone Number') }}
                {{ form_widget(registrationForm.tel, {'attr': {'placeholder': '12345678'}}) }}
                {% if registrationForm.tel.vars.errors|length > 0 %}
                    <div style="color: #F82239; font-size: 0.875rem; margin-top: 0.5rem;">
                        {{ form_errors(registrationForm.tel) }}
                    </div>
                {% endif %}
            </div>

            <div class="form-group">
                {{ form_label(registrationForm.adresse, 'Address') }}
                {{ form_widget(registrationForm.adresse, {'attr': {'placeholder': 'Your address'}}) }}
                {% if registrationForm.adresse.vars.errors|length > 0 %}
                    <div style="color: #F82239; font-size: 0.875rem; margin-top: 0.5rem;">
                        {{ form_errors(registrationForm.adresse) }}
                    </div>
                {% endif %}
            </div>

            <div class="form-group">
                {{ form_label(registrationForm.groupeSanguin, 'Blood Type') }}
                {{ form_widget(registrationForm.groupeSanguin) }}
                {% if registrationForm.groupeSanguin.vars.errors|length > 0 %}
                    <div style="color: #F82239; font-size: 0.875rem; margin-top: 0.5rem;">
                        {{ form_errors(registrationForm.groupeSanguin) }}
                    </div>
                {% endif %}
            </div>

            <div class="form-group">
                {{ form_label(registrationForm.antecedents, 'Medical History') }}
                {{ form_widget(registrationForm.antecedents) }}
                {% if registrationForm.antecedents.vars.errors|length > 0 %}
                    <div style="color: #F82239; font-size: 0.875rem; margin-top: 0.5rem;">
                        {{ form_errors(registrationForm.antecedents) }}
                    </div>
                {% endif %}
            </div>

            <div class="form-group">
                {{ form_label(registrationForm.allergies, 'Known Allergies') }}
                {{ form_widget(registrationForm.allergies) }}
                {% if registrationForm.allergies.vars.errors|length > 0 %}
                    <div style="color: #F82239; font-size: 0.875rem; margin-top: 0.5rem;">
                        {{ form_errors(registrationForm.allergies) }}
                    </div>
                {% endif %}
            </div>
            <div class="form-group">
               {{ form_label(registrationForm.imageFile, 'Profile Picture (optional)') }}
               {{ form_widget(registrationForm.imageFile) }}
            </div>

            <div class="checkbox-group">
                {{ form_widget(registrationForm.agreeTerms) }}
                {{ form_label(registrationForm.agreeTerms, 'I agree to the Terms and Conditions') }}
            </div>

            {% if registrationForm.agreeTerms.vars.errors|length > 0 %}
                <div style="color: #F82239; font-size: 0.875rem; margin-bottom: 1rem;">
                    {{ form_errors(registrationForm.agreeTerms) }}
                </div>
            {% endif %}

            <button type="submit" class="btn btn-primary" style="width: 100%; margin-bottom: 1rem;">
                Register Now
            </button>

        {{ form_end(registrationForm) }}

        <div style="text-align: center; padding-top: 1rem; border-top: 1px solid var(--border-color);">
            <p style="color: var(--text-secondary); font-size: 0.95rem;">
                Already have an account? 
                <a href="{{ path('app_login') }}">Sign in here</a>
            </p>
        </div>
    </div>

    <div class="auth-illustration">
        <div class="illustration-content">üè•</div>
    </div>
</div>
{% endblock %}
