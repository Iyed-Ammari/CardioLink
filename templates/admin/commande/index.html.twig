<script>
function toggleDetail(id) {
  const row = document.getElementById('detail-' + id);
  const btn = document.getElementById('expand-' + id);
  const open = row.style.display !== 'none';
  row.style.display = open ? 'none' : 'table-row';
  btn.textContent = open ? '+' : 'âˆ’';
  btn.classList.toggle('open', !open);
}

function filterRows(statut, btn) {
  document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
  btn.classList.add('active');
  let v = 0;
  document.querySelectorAll('.cmd-row').forEach(row => {
    const show = statut === 'all' || row.dataset.statut === statut;
    row.style.display = show ? '' : 'none';
    const id = row.querySelector('.btn-expand')?.id?.replace('expand-','');
    if (id) {
      const d = document.getElementById('detail-'+id);
      if (d && !show) d.style.display='none';
    }
    if (show) v++;
  });
  document.getElementById('visibleCount').textContent = v + ' / {{ total }}';
}

function searchRows(q) {
  q = q.toLowerCase().trim();
  let v = 0;
  document.querySelectorAll('.cmd-row').forEach(row => {
    const show = !q || row.dataset.search.includes(q);
    row.style.display = show ? '' : 'none';
    if (show) v++;
  });
  document.getElementById('visibleCount').textContent = v + ' / {{ total }}';
}
</script>
