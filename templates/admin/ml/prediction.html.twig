  .selector-label { font-size: 12px; font-weight: 600; color: var(--muted); white-space: nowrap; }
  .month-input {
    height: 36px; border-radius: 9px; border: 1.5px solid var(--border);
    background: #F8FAFC; padding: 0 12px; font-size: 13px; font-weight: 600;
    color: var(--text); outline: none; font-family: 'DM Mono', monospace;
    transition: .15s; min-width: 160px; cursor: pointer;
  }
