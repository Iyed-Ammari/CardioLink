    display: grid; grid-template-columns: repeat(3, 1fr);
    gap: 14px; margin-bottom: 20px;
  }
  @media(max-width:800px){ .kpi-row{ grid-template-columns:1fr 1fr; } }

  .kpi-card {
    background: #fff; border: 1.5px solid var(--border);
    border-radius: 18px; padding: 22px;
    position: relative; overflow: hidden;
    transition: transform .2s, box-shadow .2s;
  }
  .kpi-card:hover { transform: translateY(-2px); box-shadow: 0 12px 32px rgba(15,23,42,.08); }
  .kpi-card::before {
    content: ''; position: absolute; top: 0; left: 0; right: 0;
    height: 3px; border-radius: 18px 18px 0 0;
  }
  .kc-blue::before   { background: var(--grad); }
  .kc-green::before  { background: linear-gradient(90deg,#10B981,#34D399); }
  .kc-purple::before { background: linear-gradient(90deg,#8B5CF6,#A78BFA); }

  .kpi-icon {
    width: 40px; height: 40px; border-radius: 12px;
    display: flex; align-items: center; justify-content: center;
    font-size: 18px; margin-bottom: 14px;
  }
  .kc-blue   .kpi-icon { background: rgba(47,96,245,.08); }
  .kc-green  .kpi-icon { background: rgba(16,185,129,.08); }
  .kc-purple .kpi-icon { background: rgba(139,92,246,.08); }

  .kpi-num {
    font-size: 30px; font-weight: 700; color: var(--text);
    letter-spacing: -1px; line-height: 1; margin-bottom: 5px;
    font-family: 'DM Mono', monospace;
  }
  .kpi-lbl { font-size: 11.5px; font-weight: 500; color: var(--muted); }

  /* â”€â”€ TABLEAU TOP JOURS â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
  .pic-card {
    background: #fff; border: 1.5px solid var(--border);
    border-radius: 18px; overflow: hidden;
    box-shadow: 0 2px 16px rgba(15,23,42,.04); margin-bottom: 20px;
  }
  .pic-head {
    padding: 15px 22px; border-bottom: 1.5px solid var(--border);
    background: #FAFBFC; display: flex; align-items: center; justify-content: space-between;
  }
  .pic-head-left { display: flex; align-items: center; gap: 10px; }
  .pic-head-title { font-size: 13.5px; font-weight: 700; color: var(--text); }
  .pic-head-badge {
    background: var(--dark); color: #fff; border-radius: 999px;
    padding: 3px 12px; font-size: 11px; font-weight: 600; font-family: 'DM Mono', monospace;
  }
  .future-pill {
    background: rgba(47,96,245,.08); color: var(--blue);
    border: 1px solid rgba(47,96,245,.15); border-radius: 6px;
    padding: 2px 9px; font-size: 10.5px; font-weight: 700;
  }

  .pic-table { width: 100%; border-collapse: collapse; }
  .pic-table thead tr { background: #F8FAFC; border-bottom: 1px solid var(--border); }
  .pic-table thead th {
    padding: 10px 20px; font-size: 10px; font-weight: 700;
    text-transform: uppercase; letter-spacing: 1px; color: var(--muted); text-align: left;
  }
  .pic-table thead th.r { text-align: right; }
  .pic-table tbody tr { border-bottom: 1px solid rgba(15,23,42,.04); transition: background .12s; }
  .pic-table tbody tr:last-child { border-bottom: none; }
  .pic-table tbody tr:hover { background: #FAFBFD; }
  .pic-table tbody td { padding: 14px 20px; font-size: 13px; color: var(--text); vertical-align: middle; }
  .pic-table tbody td.r { text-align: right; }

  .rank {
    display: inline-flex; align-items: center; justify-content: center;
    width: 28px; height: 28px; border-radius: 9px;
    font-size: 11px; font-weight: 800;
  }
  .r1 { background: rgba(251,191,36,.18); color: #92400E; }
  .r2 { background: rgba(203,213,225,.25); color: #475569; }
  .r3 { background: rgba(180,119,75,.15);  color: #7C3E12; }
  .rn { background: rgba(47,96,245,.08);   color: #1D4ED8; }

  .date-cell { font-family: 'DM Mono', monospace; font-size: 13px; font-weight: 600; }

  .day-badge {
    display: inline-flex; align-items: center; gap: 4px;
    padding: 3px 9px; border-radius: 6px; font-size: 10.5px; font-weight: 700;
  }
  .day-we { background: rgba(248,34,57,.07);  color: #991B1B; }
  .day-wk { background: rgba(47,96,245,.07);  color: #1D4ED8; }

  .pred-val { font-size: 14px; font-weight: 700; color: var(--text); font-family: 'DM Mono', monospace; }

  .bar-wrap { display: flex; align-items: center; gap: 10px; }
  .bar-track { flex: 1; height: 8px; background: #F1F5F9; border-radius: 999px; overflow: hidden; min-width: 80px; }
  .bar-fill  { height: 100%; border-radius: 999px; background: var(--grad); }
  .bar-pct   { font-size: 10.5px; font-weight: 700; color: var(--muted); min-width: 36px; text-align: right; }

  /* â”€â”€ JSON â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
  .json-card {
    background: var(--dark); border-radius: 18px;
    padding: 20px 24px; position: relative; overflow: hidden;
  }
  .json-card::before {
    content: ''; position: absolute; top: -50px; right: -50px;
    width: 200px; height: 200px; border-radius: 50%;
    background: radial-gradient(circle, rgba(47,96,245,.15) 0%, transparent 65%);
  }
  .json-head {
    display: flex; align-items: center; justify-content: space-between;
    margin-bottom: 14px; position: relative; z-index: 1;
  }
  .json-title { font-size: 11px; font-weight: 700; color: rgba(255,255,255,.32); letter-spacing: 1.2px; text-transform: uppercase; }
  .json-copy {
    height: 30px; padding: 0 12px; border-radius: 8px;
    border: 1px solid rgba(255,255,255,.15); background: rgba(255,255,255,.07);
    color: rgba(255,255,255,.55); font-size: 11px; font-weight: 600;
    cursor: pointer; font-family: var(--font); transition: .15s;
  }
  .json-copy:hover { background: rgba(255,255,255,.12); color: #fff; }
  pre.json-pre {
    margin: 0; font-family: 'DM Mono', monospace; font-size: 12.5px; line-height: 1.8;
    color: rgba(255,255,255,.75); white-space: pre-wrap; word-break: break-all;
    position: relative; z-index: 1; max-height: 300px; overflow-y: auto;
  }

  /* â”€â”€ OFFLINE â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
  .offline-card {
    background: rgba(248,34,57,.04); border: 1.5px solid rgba(248,34,57,.18);
    border-radius: 18px; padding: 28px;
    display: flex; gap: 18px; align-items: flex-start;
  }
  .offline-icon { font-size: 32px; flex-shrink: 0; }
  .offline-title { font-size: 15px; font-weight: 700; color: #991B1B; margin-bottom: 6px; }
  .offline-msg   { font-size: 12.5px; color: #B91C1C; font-weight: 500; line-height: 1.7; }
  .offline-cmd {
    background: rgba(248,34,57,.08); border: 1px dashed rgba(248,34,57,.25);
    border-radius: 8px; padding: 8px 14px; margin-top: 10px;
    font-family: 'DM Mono', monospace; font-size: 12px; color: #991B1B;
  }
</style>

<div class="pred">

