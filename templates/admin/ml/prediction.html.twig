  .info-pill {
    margin-left: auto; display: inline-flex; align-items: center; gap: 6px;
    background: rgba(47,96,245,.06); border: 1px solid rgba(47,96,245,.12);
    border-radius: 8px; padding: 5px 12px;
    font-size: 11px; font-weight: 600; color: #2F60F5;
  }

