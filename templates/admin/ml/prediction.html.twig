{% block body %}
<style>
  @import url('https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;500;600;700;800&family=DM+Mono:wght@400;500&display=swap');

  :root {
    --red:    #F82239;
    --blue:   #2F60F5;
    --grad:   linear-gradient(135deg, #F82239 0%, #2F60F5 100%);
    --dark:   #0D0F14;
    --border: rgba(15,23,42,.07);
    --muted:  #94A3B8;
    --text:   #0F172A;
    --font:   'Plus Jakarta Sans', sans-serif;
  }

  .pred * { font-family: var(--font); box-sizing: border-box; }

  /* â”€â”€ HERO â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
  .pred-hero {
    background: var(--dark); border-radius: 22px;
    padding: 32px 36px; margin-bottom: 20px;
    position: relative; overflow: hidden;
  }
  .pred-hero::before {
    content: ''; position: absolute; top: -90px; right: -60px;
    width: 320px; height: 320px; border-radius: 50%;
    background: radial-gradient(circle, rgba(248,34,57,.22) 0%, transparent 65%);
    pointer-events: none;
  }
  .pred-hero::after {
    content: ''; position: absolute; bottom: -70px; left: 28%;
    width: 280px; height: 280px; border-radius: 50%;
    background: radial-gradient(circle, rgba(47,96,245,.18) 0%, transparent 65%);
    pointer-events: none;
  }
  .hero-inner {
    position: relative; z-index: 1;
    display: flex; align-items: flex-start;
    justify-content: space-between; gap: 24px; flex-wrap: wrap;
  }
  .hero-left { flex: 1; min-width: 220px; }

  .hero-eyebrow {
    font-size: 10px; font-weight: 700; letter-spacing: 1.5px;
    text-transform: uppercase; color: rgba(255,255,255,.3); margin-bottom: 8px;
  }
  .hero-title {
    font-size: 26px; font-weight: 600; color: #fff;
    letter-spacing: -.3px; margin-bottom: 4px; line-height: 1.2;
  }
  .hero-title strong {
    font-weight: 800;
    background: var(--grad);
    -webkit-background-clip: text; -webkit-text-fill-color: transparent;
  }
  .hero-sub {
    font-size: 12px; color: rgba(255,255,255,.35); font-weight: 500; margin-bottom: 20px;
    display: flex; align-items: center; gap: 10px; flex-wrap: wrap;
  }
  .model-badge {
    display: inline-flex; align-items: center; gap: 5px;
    background: rgba(255,255,255,.07); border: 1px solid rgba(255,255,255,.1);
    border-radius: 6px; padding: 2px 9px; font-size: 10.5px; font-weight: 600;
    color: rgba(255,255,255,.5);
  }

  /* Onglets annÃ©es â€” FUTUR */
  .year-nav { display: flex; gap: 5px; margin-bottom: 10px; flex-wrap: wrap; }
  .year-btn {
    padding: 5px 14px; border-radius: 9px; font-size: 11.5px; font-weight: 700;
    border: 1px solid rgba(255,255,255,.1);
    background: rgba(255,255,255,.05); color: rgba(255,255,255,.45);
    cursor: pointer; text-decoration: none; transition: all .15s;
    position: relative;
  }
  .year-btn:hover { background: rgba(255,255,255,.1); color: #fff; }
  .year-btn.active {
    background: rgba(255,255,255,.14); color: #fff;
    border-color: rgba(255,255,255,.22); font-weight: 800;
  }
  .year-btn.future::after {
