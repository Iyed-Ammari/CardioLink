<!doctype html>
<html lang="fr">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{% block title %}Espace patient{% endblock %} • CardioLink</title>

  <style>
    :root{
      --red:#F82239;
      --blue:#2F60F5;
      --bg:#F6F7FB;
      --card:#FFFFFF;
      --text:#111827;
      --muted:#6B7280;
      --border:#E5E7EB;
      --shadow: 0 10px 25px rgba(16,24,40,.08);
      --shadow-soft: 0 6px 18px rgba(16,24,40,.06);
      --radius:16px;
    }

    *{box-sizing:border-box}
    body{
      margin:0;
      font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Arial;
      color:var(--text);
      background:var(--bg);
    }

    .shell{display:flex; min-height:100vh;}

    /* Sidebar (même esprit que admin) */
    .sidebar{
      width: 290px;
      background:#fff;
      border-right: 1px solid rgba(229,231,235,.8);
      box-shadow: 0 10px 30px rgba(16,24,40,.06);
      display:flex;
      flex-direction:column;
    }

    .brand{
      padding: 22px 18px 14px 18px;
      display:flex; gap:12px; align-items:center;
    }
    .brand-badge{
      width:44px;height:44px;border-radius:14px;
      background: linear-gradient(135deg, var(--red), var(--blue));
      display:flex;align-items:center;justify-content:center;
      box-shadow: 0 12px 20px rgba(47,96,245,.18);
    }
    .brand-badge svg{width:22px;height:22px; fill:#fff}
    .brand-title{line-height:1.05;}
    .brand-title .name{font-weight:800;font-size:18px;letter-spacing:.2px;}
    .brand-title .sub{font-size:12.5px;color:var(--muted);margin-top:3px;}

    .nav{
      padding: 14px 12px;
      display:flex;
      flex-direction:column;
      gap:10px;
    }
    .nav a{
      text-decoration:none;
      color:#111827;
      display:flex;
      align-items:center;
      gap:12px;
      padding: 12px 12px;
      border-radius: 14px;
      border: 1px solid transparent;
      transition: .18s ease;
      font-weight:700;
    }
    .nav a .icon{
      width:40px;height:40px;border-radius:14px;
      display:flex;align-items:center;justify-content:center;
      background:#F3F4F6;
      transition:.18s ease;
      flex:0 0 auto;
    }
    .nav a .icon svg{width:20px;height:20px; stroke:#374151}
    .nav a:hover{
      border-color: rgba(47,96,245,.18);
      box-shadow: var(--shadow-soft);
      transform: translateY(-1px);
    }
    .nav a.active{
      color:#fff;
      background: linear-gradient(90deg, var(--red), var(--blue));
      box-shadow: 0 14px 25px rgba(47,96,245,.16);
    }
    .nav a.active .icon{background: rgba(255,255,255,.18);}
    .nav a.active .icon svg{stroke:#fff}

    .sidebar-footer{
      margin-top:auto;
      padding: 14px 16px 18px 16px;
      border-top: 1px solid rgba(229,231,235,.8);
      display:flex;gap:12px;align-items:center;
    }
    .avatar{
      width:44px;height:44px;border-radius:16px;
      background: linear-gradient(135deg, rgba(248,34,57,.22), rgba(47,96,245,.22));
      display:flex;align-items:center;justify-content:center;
      font-weight:900;color:#1F2937;
    }
    .who .role{font-size:12px;color:var(--muted);font-weight:800}
    .who .user{font-weight:900}

    /* Main */
    .main{flex:1; padding: 22px 26px;}

    .topbar{
      display:flex;
      justify-content:space-between;
      align-items:center;
      gap:12px;
      margin-bottom: 18px;
    }
    .topbar .title{
      display:flex;
      flex-direction:column;
      gap:4px;
    }
    .topbar h1{margin:0; font-size:26px; letter-spacing:.2px;}
    .topbar .hint{color:var(--muted); font-size:13px; font-weight:800;}

    .card{
      background:var(--card);
      border:1px solid rgba(229,231,235,.8);
      border-radius: var(--radius);
      box-shadow: var(--shadow);
      padding: 18px;
    }

    .btn{
      height:42px;
      padding: 0 14px;
      border-radius: 12px;
      border:1px solid transparent;
      cursor:pointer;
      font-weight:900;
      display:inline-flex;
      align-items:center;
      gap:8px;
      text-decoration:none;
      user-select:none;
    }
    .btn-primary{
      color:#fff;
      background: linear-gradient(90deg, var(--red), var(--blue));
      box-shadow: 0 14px 25px rgba(47,96,245,.16);
    }
    .btn-ghost{
      background:#fff;
      border-color: rgba(229,231,235,.9);
      color:#111827;
    }

    /* Cart icon top */
    .cart-btn{
      position:relative;
      height:42px;
      width:46px;
      border-radius:12px;
      border:1px solid rgba(229,231,235,.9);
      background:#fff;
      display:flex;
      align-items:center;
      justify-content:center;
      cursor:pointer;
      transition:.15s ease;
    }
    .cart-btn:hover{ box-shadow: var(--shadow-soft); transform: translateY(-1px); }
    .cart-btn svg{ width:20px; height:20px; stroke:#374151; }
    .cart-badge{
      position:absolute;
      top:-7px; right:-7px;
      min-width:20px;
      height:20px;
      padding:0 6px;
      border-radius:999px;
      background: linear-gradient(90deg, var(--red), var(--blue));
      color:#fff;
      font-weight:900;
      font-size:12px;
      display:flex;
      align-items:center;
      justify-content:center;
      box-shadow: 0 10px 18px rgba(47,96,245,.18);
    }

    /* Toasts */
    .toast-stack{
      position:fixed;
      top:18px;
      right:18px;
      z-index:9999;
      display:flex;
      flex-direction:column;
      gap:10px;
      pointer-events:none;
    }
    .toast{
      pointer-events:auto;
      width:min(360px, calc(100vw - 36px));
      background:#fff;
      border-radius:14px;
      border:1px solid rgba(229,231,235,.9);
      box-shadow: 0 14px 30px rgba(16,24,40,.14);
      padding:12px 12px;
      position:relative;
      overflow:hidden;
      animation: toastIn .18s ease-out;
    }
    .toast::before{
      content:"";
      position:absolute;
      left:0; top:0; bottom:0;
      width:6px;
      background: var(--blue);
    }
    .toast-success{ border-color: rgba(13,148,136,.25); }
    .toast-success::before{ background: rgba(13,148,136,1); }
    .toast-danger{ border-color: rgba(248,34,57,.25); }
    .toast-danger::before{ background: rgba(248,34,57,1); }
    .toast-title{ font-weight:900; font-size:13px; color:#111827; }
    .toast-msg{ margin-top:3px; font-weight:800; font-size:13px; color:#374151; }
    .toast-close{
      position:absolute;
      top:8px; right:10px;
      border:0;
      background:transparent;
      font-size:18px;
      cursor:pointer;
      color:#6B7280;
      line-height:1;
    }
    .toast-hide{
      opacity:0;
      transform: translateY(-6px);
      transition: .2s ease;
    }
    @keyframes toastIn{
      from{ opacity:0; transform: translateY(-8px); }
      to{ opacity:1; transform: translateY(0); }
    }

    @media (max-width: 980px){
      .sidebar{width: 84px}
      .brand-title, .nav .label, .who{display:none}
      .nav a{justify-content:center}
      .sidebar-footer{justify-content:center}
    }
  </style>

  {% block styles %}{% endblock %}
</head>
<body>

  <div class="toast-stack" id="toastStack">
    {% for label, msgs in app.flashes %}
      {% for m in msgs %}
        <div class="toast {{ label == 'success' ? 'toast-success' : (label == 'danger' ? 'toast-danger' : '') }}">
          <div class="toast-title">{{ label == 'success' ? 'Succès' : 'Erreur' }}</div>
          <div class="toast-msg">{{ m }}</div>
          <button class="toast-close" type="button" aria-label="Fermer">×</button>
        </div>
      {% endfor %}
    {% endfor %}
  </div>

  <div class="shell">
    {% include 'patient/_sidebar.html.twig' %}

    <main class="main">
      <div class="topbar">
        <div class="title">
          <h1>{% block page_title %}Espace patient{% endblock %}</h1>
          <div class="hint">{% block page_hint %}Marketplace patient{% endblock %}</div>
        </div>

        <a class="cart-btn" href="{{ path('patient_panier_show') }}" title="Mon panier">
          <svg viewBox="0 0 24 24" fill="none">
            <path d="M6 6h15l-1.5 9h-12z" stroke-width="2" stroke-linejoin="round"/>
            <path d="M6 6L5 3H2" stroke-width="2" stroke-linecap="round"/>
            <path d="M9 20a1 1 0 1 0 0-2 1 1 0 0 0 0 2Z" stroke-width="2"/>
            <path d="M18 20a1 1 0 1 0 0-2 1 1 0 0 0 0 2Z" stroke-width="2"/>
          </svg>

          {% set pc = panier_count() %}
          {% if pc > 0 %}
            <span class="cart-badge">{{ pc }}</span>
          {% endif %}
        </a>
      </div>

      {% block body %}{% endblock %}
    </main>
  </div>

  <script>
    (function(){
      const toasts = document.querySelectorAll('.toast');
      if(!toasts.length) return;

      toasts.forEach((t) => {
        const isSuccess = t.classList.contains('toast-success');
        const ttl = isSuccess ? 8000 : 4500;

        const close = () => {
          t.classList.add('toast-hide');
          setTimeout(() => t.remove(), 220);
        };

        const btn = t.querySelector('.toast-close');
        if(btn) btn.addEventListener('click', close);

        setTimeout(close, ttl);
      });
    })();
  </script>

  {% block javascripts %}{% endblock %}
</body>
</html>
