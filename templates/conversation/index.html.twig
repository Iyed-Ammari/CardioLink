        <div class="list-group">
            {% for contact in contacts %}
                {# On exclut l'utilisateur courant au cas oÃ¹ #}
                {% if contact.id != app.user.id %}
                <div>
                    <a href="{{ path('app_conversation_start', {'id': contact.id}) }}" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                        <span>
                            {{ contact.prenom }} {{ contact.nom }} 
