{% extends 'base.html.twig' %}

{% block title %}
  Conversation - CardioLink
{% endblock %}

{% block body %}
  <div class="container mt-5">
    <a href="{{ path('app_conversation_index') }}" class="btn btn-secondary mb-3">← Retour</a>

    <h1 class="mb-4">
      Conversation avec{% if app.user == conversation.patient %}
        Dr. {{ conversation.medecin.prenom }} {{ conversation.medecin.nom }}
      {% else %}
        {{ conversation.patient.prenom }} {{ conversation.patient.nom }}
      {% endif %}
    </h1>

    {# Zone des messages #}
    <div class="card" style="height: 500px; overflow-y: auto; background-color: #f8f9fa;" id="chat-box">
      <div class="card-body" id="messages-list">
        {% for message in messages %}
          <div class="mb-3 {% if message.sender == app.user %}{% endif %}">
            <div class="{% if message.sender == app.user %}

              {% endif %} p-3 rounded d-inline-block"
              style="max-width: 70%; border: 1px solid #ddd;">
              <p class="mb-1">{{ message.content }}</p>
              <small class="{% if message.sender == app.user %}

                {% endif %}">
                {{ message.createdAt|date('H:i') }}
              </small>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>

    {# Zone de saisie #}
    <div class="mt-3">
      <div class="input-group">
        <textarea class="form-control" placeholder="Votre message..." rows="2" id="messageContent"></textarea>
        <button class="btn btn-primary" id="sendBtn">Envoyer ➤</button>
      </div>
    </div>
  </div>     

  {# --- SCRIPT WEBSOCKET & AJAX --- #}
<script>
    const conversationId = {{ conversation.id }};
    const currentUserId = {{ app.user.id }};
    const currentUserPrenom = "{{ app.user.prenom }}";
    
    // 1. Connexion au WebSocket
    const socket = new WebSocket("ws://localhost:3001");

    socket.onopen = function(e) {
        console.log("Connecté au serveur de chat !");
    };

    // 2. Quand on reçoit un message du WebSocket
    socket.onmessage = function(event) {
        const data = JSON.parse(event.data);
        
        // On n'affiche le message que s'il appartient à CETTE conversation
        if (data.conversationId === conversationId) {
            appendMessage(data.content, data.senderId === currentUserId, data.time);
        }
    };

    // 3. Envoi du message (AJAX + WebSocket)
    document.getElementById('sendBtn').addEventListener('click', sendMessage);
    
    // Envoi avec la touche "Entrée"
    document.getElementById('messageContent').addEventListener('keypress', function (e) {
        if (e.key === 'Enter' && !e.shiftKey) {
            e.preventDefault();
            sendMessage();
        }
    });

    function sendMessage() {
        const input = document.getElementById('messageContent');
        const content = input.value.trim();

        if (!content) return;

        // A. Sauvegarde en Base de Données via AJAX
        fetch("{{ path('app_conversation_send', {id: conversation.id}) }}", {
            method: "POST",
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ content: content })
        })
        .then(response => response.json())
        .then(data => {
            if (data.status === 'success') {
                // B. Si sauvegardé, on l'affiche pour MOI tout de suite
                appendMessage(content, true, data.createdAt);
                input.value = '';

                // C. On prévient les AUTRES via WebSocket
                const payload = {
                    conversationId: conversationId,
                    content: content,
                    senderId: currentUserId,
                    time: data.createdAt
                };
                socket.send(JSON.stringify(payload));
            }
        })
        .catch(error => console.error('Erreur:', error));
    }

    // Fonction pour ajouter le HTML du message
    function appendMessage(text, isMe, time) {
        const list = document.getElementById('messages-list');
        const alignment = isMe ? 'text-end' : 'text-start';
        const color = isMe ? 'bg-primary text-white' : 'bg-white';
        const textColor = isMe ? 'text-white-50' : 'text-muted';

        const html = `
            <div class="mb-3 ${alignment}">
                <div class="${color} p-3 rounded d-inline-block" style="max-width: 70%; border: 1px solid #ddd;">
                    <p class="mb-1">${text}</p>
                    <small class="${textColor}">${time}</small>
                </div>
            </div>
        `;
        
        list.insertAdjacentHTML('beforeend', html);
        // Scroll automatique vers le bas
        const chatBox = document.getElementById('chat-box');
        chatBox.scrollTop = chatBox.scrollHeight;
    }
</script>
{% endblock %}