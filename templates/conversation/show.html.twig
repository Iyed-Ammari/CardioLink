{% extends 'base.html.twig' %}

{% block title %}Conversation - CardioLink{% endblock %}

{% block body %}
<div class="container mt-5">
    <a href="{{ path('app_conversation_index') }}" class="btn btn-secondary mb-3">← Retour</a>
    
    <h1 class="mb-4">
        Conversation avec 
        {% if app.user == conversation.patient %}
            Dr. {{ conversation.medecin.prenom }} {{ conversation.medecin.nom }}
        {% else %}
            {{ conversation.patient.prenom }} {{ conversation.patient.nom }}
        {% endif %}
    </h1>

    <div class="card" style="height: 500px; overflow-y: auto; background-color: #f8f9fa;">
        <div class="card-body">
            {% if messages is empty %}
                <div class="text-center text-muted">
                    <p>Aucun message pour le moment. Commencez une conversation !</p>
                </div>
            {% else %}
                {% for message in messages %}
                    <div class="mb-3 {% if message.sender == app.user %}text-end{% endif %}">
                        <div class="{% if message.sender == app.user %}bg-primary text-white{% else %}bg-white{% endif %} p-3 rounded d-inline-block" style="max-width: 70%; border: 1px solid #ddd;">
                            <p class="mb-1">{{ message.content }}</p>
                            <small class="{% if message.sender == app.user %}text-white-50{% else %}text-muted{% endif %}">
                                {{ message.createdAt|date('H:i') }}
                            </small>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>

    <div class="mt-3">
        <div class="input-group">
            <textarea class="form-control" placeholder="Votre message..." rows="3" id="messageContent"></textarea>
        </div>
        <button class="btn btn-primary mt-2 w-100" id="sendBtn">Envoyer le message</button>
    </div>
</div>

<script>
    // Placeholder pour la logique d'envoi de message (à implémenter avec WebSocket)
    document.getElementById('sendBtn').addEventListener('click', function() {
        const content = document.getElementById('messageContent').value;
        if (content.trim()) {
            alert('Fonctionnalité à implémenter : Envoi du message');
            // TODO: Implémenter l'envoi via WebSocket
        }
    });
</script>
{% endblock %}
