{% extends 'base.html.twig' %}

{% block title %}Modifier Intervention {% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-edit"></i> Modifier l'Intervention
                    </h3>
                </div>
                <div class="card-body">
                    {{ form_start(form, {'attr': {'class': 'mb-4', 'novalidate': 'novalidate'}}) }}
                        <div class="mb-3">
                            {{ form_label(form.type, 'Type', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.type) }}
                            {% if form.type.vars.errors|length > 0 %}
                                <div class="invalid-feedback d-block">
                                    {% for error in form.type.vars.errors %}
                                        <i class="fas fa-exclamation-circle"></i> {{ error.message }}
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.description) }}
                            {% if form.description.vars.errors|length > 0 %}
                                <div class="invalid-feedback d-block">
                                    {% for error in form.description.vars.errors %}
                                        <i class="fas fa-exclamation-circle"></i> {{ error.message }}
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.statut, 'Statut', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.statut) }}
                            {% if form.statut.vars.errors|length > 0 %}
                                <div class="invalid-feedback d-block">
                                    {% for error in form.statut.vars.errors %}
                                        <i class="fas fa-exclamation-circle"></i> {{ error.message }}
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-warning btn-lg">
                                <i class="fas fa-save"></i> Mettre Ã  jour
                            </button>
                            <a href="{{ path('app_intervention_show', {'id': intervention.id}) }}" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Annuler
                            </a>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
