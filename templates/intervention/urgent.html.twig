{% extends 'base.html.twig' %}

{% block title %}Alertes SOS {% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <h1 class="mb-4" style="color: #dc3545;">
                <i class="fas fa-exclamation-triangle"></i> üö® ALERTES SOS URGENTES
            </h1>

            {% if interventions|length > 0 %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle"></i>
                    <strong>{{ interventions|length }} intervention(s)</strong> d'urgence en attente d'attention imm√©diate.
                </div>

                <div class="row">
                    {% for intervention in interventions %}
                        <div class="col-md-6 mb-4">
                            <div class="card border-danger border-3">
                                <div class="card-header bg-danger text-white">
                                    <h5 class="card-title mb-0">
                                        <i class="fas fa-ambulance"></i> {{ intervention.type }}
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="mb-3">
                                        <h6 class="text-muted">Description</h6>
                                        <p>{{ intervention.description }}</p>
                                    </div>

                                    <div class="row">
                                        <div class="col-6">
                                            <h6 class="text-muted">Statut</h6>
                                            <span class="badge bg-warning text-dark">{{ intervention.statut }}</span>
                                        </div>
                                        <div class="col-6">
                                            <h6 class="text-muted">Urgence</h6>
                                            <span class="badge bg-danger">URGENT</span>
                                        </div>
                                    </div>

                                    {% if intervention.suiviOrigine %}
                                        <hr>
                                        <div class="mb-3">
                                            <h6 class="text-muted">Origine du d√©clenchement</h6>
                                            <p class="mb-0">
                                                <strong>{{ intervention.suiviOrigine.typeDonnee }}:</strong> 
                                                {{ intervention.suiviOrigine.getFormattedValue() }}
                                            </p>
                                        </div>
                                    {% endif %}
                                </div>
                                <div class="card-footer">
                                    <a href="{{ path('app_intervention_show', {'id': intervention.id}) }}" class="btn btn-sm btn-danger">
                                        <i class="fas fa-arrow-right"></i> Voir les d√©tails
                                    </a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle"></i>
                    <strong>Aucune alerte SOS en attente.</strong> Situation normale.
                    <a href="{{ path('app_intervention_index') }}" class="alert-link">Voir toutes les interventions</a>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
