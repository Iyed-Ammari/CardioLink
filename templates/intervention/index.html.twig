{% extends 'base.html.twig' %}

{% block title %}Interventions {% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <h1 class="mb-4">
                <i class="fas fa-ambulance"></i> Interventions
            </h1>

            <div class="mb-4">
                <a href="{{ path('app_intervention_urgent') }}" class="btn btn-danger">
                    <i class="fas fa-exclamation-triangle"></i> Alertes SOS Urgentes
                </a>
            </div>

            {% if interventions|length > 0 %}
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Type</th>
                                <th>Description</th>
                                <th>Statut</th>
                                <th>Date planifi√©e</th>
                                <th>M√©decin</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for intervention in interventions %}
                                <tr class="
                                    {% if intervention.isUrgent() %}
                                        table-danger
                                    {% endif %}
                                ">
                                    <td>
                                        <strong>{{ intervention.type }}</strong>
                                        {% if intervention.isUrgent() %}
                                            <span class="badge bg-danger ms-2">URGENT</span>
                                        {% endif %}
                                    </td>
                                    <td>{{ intervention.description}}</td>
                                    <td>
                                        <span class="badge bg-
                                            {% if intervention.statut == 'En attente' %}
                                                warning
                                            {% elseif intervention.statut == 'Effectu√©e' %}
                                                success
                                            {% elseif intervention.statut == 'Annul√©e' %}
                                                secondary
                                            {% else %}
                                                info
                                            {% endif %}
                                        ">
                                            {{ intervention.statut }}
                                        </span>
                                    </td>
                                    <td>{{ intervention.datePlanifiee|format_datetime('short', 'short') }}</td>
                                    <td>
                                        {% if intervention.medecin %}
                                            {{ intervention.medecin.prenom }} {{ intervention.medecin.nom }}
                                        {% else %}
                                            <em class="text-muted">Non assign√©e</em>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <a href="{{ path('app_intervention_show', {'id': intervention.id}) }}" class="btn btn-sm btn-info">
                                            <i class="fas fa-eye">üëÅÔ∏è</i>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> Aucune intervention en attente.
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
