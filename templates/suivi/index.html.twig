{% extends 'base.html.twig' %}

{% block title %}Mes Suivis Cardiaques {% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <h1 class="mb-4">
                <i class="fas fa-heartbeat"></i> Mes Suivis Cardiaques
            </h1>

            {% if app.flashes %}
                {% for type, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ type == 'success' ? 'success' : 'danger' }} alert-dismissible fade show" role="alert">
                            {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    {% endfor %}
                {% endfor %}
            {% endif %}

            <div class="mb-4">
                <a href="{{ path('app_suivi_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Nouveau Suivi
                </a>
            </div>

            {% if suivis|length > 0 %}
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Type de donn√©e</th>
                                <th>Valeur</th>
                                <th>Unit√©</th>
                                <th>Date de saisie</th>
                                <th>Urgence</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for suivi in suivis %}
                                <tr class="
                                    {% if suivi.niveauUrgence == 'Critique' %}
                                        table-danger
                                    {% elseif suivi.niveauUrgence == 'Stable' %}
                                        table-warning
                                    {% else %}
                                        table-light
                                    {% endif %}
                                ">
                                    <td>
                                        <strong>{{ suivi.typeDonnee }}</strong>
                                    </td>
                                    <td>{{ suivi.valeur }}</td>
                                    <td>{{ suivi.unite }}</td>
                                    <td>{{ suivi.dateSaisie|format_datetime('medium', 'short') }}</td>
                                    <td>
                                        <span class="badge bg-
                                            {% if suivi.niveauUrgence == 'Critique' %}
                                                danger
                                            {% elseif suivi.niveauUrgence == 'Stable' %}
                                                warning
                                            {% else %}
                                                success
                                            {% endif %}
                                        ">
                                            {{ suivi.niveauUrgence }}
                                        </span>
                                    </td>
                                    <td>
                                        <a href="{{ path('app_suivi_show', {'id': suivi.id}) }}" class="btn btn-sm btn-info">
                                            <i class="fas fa-eye">
                                            üëÅÔ∏è
                                            </i>
                                        </a>
                                        <a href="{{ path('app_suivi_edit', {'id': suivi.id}) }}" class="btn btn-sm btn-warning">
                                            <i class="fas fa-edit">‚úèÔ∏è</i>
                                        </a>
                                        <form method="POST" action="{{ path('app_suivi_delete', {'id': suivi.id}) }}" style="display:inline;">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ suivi.id) }}">
                                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('√ätes-vous s√ªr ?')">
                                                <i class="fas fa-trash">üóëÔ∏è</i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> Aucun suivi enregistr√©. 
                    <a href="{{ path('app_suivi_new') }}">Commencez maintenant</a>
                </div>
            {% endif %}
        </div>
    </div>
</div>

<style>
    .table-hover tbody tr:hover {
        background-color: rgba(0, 0, 0, 0.05);
    }
</style>
{% endblock %}
