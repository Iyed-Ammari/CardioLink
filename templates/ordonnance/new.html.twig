{% extends 'base.html.twig' %}

{% block title %}Nouvelle Ordonnance{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Créer une nouvelle ordonnance</h1>

    {# Flash messages #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">{{ message }}</div>
        {% endfor %}
    {% endfor %}

    {{ form_start(form) }}

        {{ form_row(form.reference) }}
        {{ form_row(form.diagnostic) }}
        {{ form_row(form.notes) }}

        <button class="btn btn-success mt-3">Créer</button>

    {{ form_end(form) }}

    <a href="{{ path('app_rdv_index') }}" class="btn btn-secondary mt-2">Retour à la liste</a>
</div>
{% endblock %}