{% extends 'base.html.twig' %}

{% block title %}Détails de l'ordonnance{% endblock %}

{% block body %}
<h1>Détails de l'ordonnance #{{ ordonnance.id }}</h1>

<ul class="list-group">
    <li class="list-group-item"><strong>Référence :</strong> {{ ordonnance.reference }}</li>
    <li class="list-group-item"><strong>Date :</strong> {{ ordonnance.dateCreation ? ordonnance.dateCreation|date('Y-m-d H:i') : '' }}</li>
    <li class="list-group-item"><strong>Patient :</strong> {{ ordonnance.patientNom }}</li>
    <li class="list-group-item"><strong>Médecin :</strong> {{ ordonnance.medecinNom }}</li>
    <li class="list-group-item"><strong>Diagnostic :</strong><br> {{ ordonnance.diagnostic }}</li>
    <li class="list-group-item"><strong>Notes :</strong><br> {{ ordonnance.notes }}</li>
</ul>

<a href="{{ path('app_rdv_index') }}" class="btn btn-secondary mt-3">Retour</a>
{% if is_granted('ROLE_MEDECIN') %}
<a href="{{ path('ordonnance_edit', {'id': ordonnance.id}) }}" class="btn btn-primary mt-3">Modifier</a>
{% endif %}

<button class="btn btn-success mt-3" onclick="window.print()">Imprimer</button>
<a href="{{ path('ordonnance_pdf', {'id': ordonnance.id}) }}" class="btn btn-dark mt-3">
    Télécharger PDF
</a>

{% endblock %}