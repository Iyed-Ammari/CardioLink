{% extends 'base.html.twig' %}

{% block title %}Modifier le Rendez-vous{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h3 class="mb-0">‚úèÔ∏è Modifier le Rendez-vous</h3>
                </div>
                <div class="card-body">
                    {# Affiche les erreurs globales #}
                    {% for message in app.flashes('danger') %}
                        <div class="alert alert-danger">
                            {{ message }}
                        </div>
                    {% endfor %}

                    {{ form_start(form) }}
                       
                        <div class="mb-3">
                            <label class="form-label">{{ form.medecin.vars.label }}</label>
                            {{ form_widget(form.medecin, {'attr': {'class': 'form-select'}}) }}
                            {% if form.medecin.vars.errors %}
                                <div class="invalid-feedback d-block">
                                    {% for error in form.medecin.vars.errors %}
                                        {{ error.message }}
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">{{ form.dateHeure.vars.label }}</label>
                                {{ form_widget(form.dateHeure, {'attr': {'class': 'form-control', 'type': 'datetime-local'}}) }}
                                {% if form.dateHeure.vars.errors %}
                                    <div class="invalid-feedback d-block">
                                        {% for error in form.dateHeure.vars.errors %}
                                            {{ error.message }}
                                        {% endfor %}
                                    </div>
                                {% endif %}
                            </div>
                           
                            <div class="col-md-6 mb-3">
                                <label class="form-label">{{ form.type.vars.label }}</label>
                                {{ form_widget(form.type, {'attr': {'class': 'form-select'}}) }}
                                {% if form.type.vars.errors %}
                                    <div class="invalid-feedback d-block">
                                        {% for error in form.type.vars.errors %}
                                            {{ error.message }}
                                        {% endfor %}
                                    </div>
                                {% endif %}
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">{{ form.remarques.vars.label }}</label>
                            {{ form_widget(form.remarques, {'attr': {'class': 'form-control', 'rows': '3', 'placeholder': 'Ex: Douleurs thoraciques depuis 2 jours...'}}) }}
                        </div>

                        <div class="mt-3 d-flex justify-content-between">
                            <a href="{{ path('app_rdv_index') }}" class="btn btn-secondary">Retour</a>
                            <button class="btn btn-warning">üíæ Enregistrer les modifications</button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
