{% extends 'base.html.twig' %}

{% block title %}Nouveau Rendez-vous{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">üìÖ Prendre un Rendez-vous</h3>
                </div>
                <div class="card-body">
                    {# Affiche les erreurs globales #}
                    {% for message in app.flashes('danger') %}
                        <div class="alert alert-danger">
                            {{ message }}
                        </div>
                    {% endfor %}

                    {{ form_start(form) }}
                       
                        {# 1. Champ M√©decin #}
                        <div class="mb-3">
                            <label class="form-label">{{ form.medecin.vars.label }}</label>
                            {{ form_widget(form.medecin, {'attr': {'class': 'form-select'}}) }}
                            {% if form.medecin.vars.errors %}
                                <div class="invalid-feedback d-block">
                                    {% for error in form.medecin.vars.errors %}
                                        <span class="text-danger">‚ö†Ô∏è {{ error.message }}</span>
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </div>

                        {# 2. Champ Date et Heure #}
                        <div class="mb-3">
                            <label class="form-label">{{ form.dateHeure.vars.label }}</label>
                            {{ form_widget(form.dateHeure, {'attr': {'class': 'form-control', 'type': 'datetime-local'}}) }}
                            {% if form.dateHeure.vars.errors %}
                                <div class="invalid-feedback d-block">
                                    {% for error in form.dateHeure.vars.errors %}
                                        <span class="text-danger">‚ö†Ô∏è {{ error.message }}</span>
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </div>

                        {# 3. Champ Type de Consultation (Radio Buttons) #}
                        <div class="mb-3">
                            <label class="form-label">{{ form.type.vars.label }}</label>
                            <div>
                                {% for child in form.type %}
                                    <div class="form-check">
                                        {{ form_widget(child, {'attr': {'class': 'form-check-input'}}) }}
                                        <label class="form-check-label" for="{{ child.vars.id }}">
                                            {% if child.vars.value == 'Pr√©sentiel' %}
                                                üè• Consultation au cabinet
                                            {% else %}
                                                üíª Vid√©o Consultation
                                            {% endif %}
                                        </label>
                                    </div>
                                {% endfor %}
                            </div>
                            {% if form.type.vars.errors %}
                                <div class="invalid-feedback d-block">
                                    {% for error in form.type.vars.errors %}
                                        <span class="text-danger">‚ö†Ô∏è {{ error.message }}</span>
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </div>

                        {# 4. Champ Motif / Remarques #}
                        <div class="mb-3">
                            <label class="form-label">{{ form.remarques.vars.label }}</label>
                            {{ form_widget(form.remarques, {'attr': {'class': 'form-control', 'rows': '3', 'placeholder': 'Ex: Douleurs thoraciques depuis 2 jours...'}}) }}
                            {% if form.remarques.vars.errors %}
                                <div class="invalid-feedback d-block">
                                    {% for error in form.remarques.vars.errors %}
                                        <span class="text-danger">‚ö†Ô∏è {{ error.message }}</span>
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </div>

                        {# Boutons d'action #}
                        <div class="d-grid gap-2">
                            <button class="btn btn-success btn-lg" type="submit">
                                ‚úÖ Confirmer le rendez-vous
                            </button>
                            <a href="{{ path('app_rdv_index') }}" class="btn btn-outline-secondary">
                                Annuler
                            </a>
                        </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}