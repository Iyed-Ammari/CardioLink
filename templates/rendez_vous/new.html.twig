{% extends 'base.html.twig' %}

{% block title %}Nouveau Rendez-vous{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">ðŸ“… Prendre un Rendez-vous</h3>
                </div>
                <div class="card-body">
                    {# Affiche les erreurs globales (ex: mÃ©decin non dispo) #}
                    {% for message in app.flashes('danger') %}
                        <div class="alert alert-danger">
                            {{ message }}
                        </div>
                    {% endfor %}

                    {{ form_start(form) }}
                       
                        <div class="mb-3">
                            <label class="form-label">{{ form.medecin.vars.label }}</label>
                            {{ form_widget(form.medecin, {'attr': {'class': 'form-select'}}) }}
                            {% if form.medecin.vars.errors %}
                                <div class="invalid-feedback d-block">
                                    {% for error in form.medecin.vars.errors %}
                                        {{ error.message }}
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">{{ form.dateHeure.vars.label }}</label>
                                {{ form_widget(form.dateHeure, {'attr': {'class': 'form-control', 'type': 'datetime-local'}}) }}
                                {% if form.dateHeure.vars.errors %}
                                    <div class="invalid-feedback d-block">
                                        {% for error in form.dateHeure.vars.errors %}
                                            {{ error.message }}
                                        {% endfor %}
                                    </div>
                                {% endif %}
                            </div>
                           
                            <div class="col-md-6 mb-3">
                                <label class="form-label">{{ form.type.vars.label }}</label>
                                {{ form_widget(form.type, {'attr': {'class': 'form-select', 'id': 'select-type'}}) }}
                                {% if form.type.vars.errors %}
                                    <div class="invalid-feedback d-block">
                                        {% for error in form.type.vars.errors %}
                                            {{ error.message }}
                                        {% endfor %}
                                    </div>
                                {% endif %}
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">{{ form.remarques.vars.label }}</label>
                            {{ form_widget(form.remarques, {'attr': {'class': 'form-control', 'rows': '3', 'placeholder': 'Ex: Douleurs thoraciques depuis 2 jours...'}}) }}
                        </div>

                        <div class="d-grid gap-2">
                            <button class="btn btn-success btn-lg" type="submit">
                                âœ… Confirmer le rendez-vous
                            </button>
                            <a href="{{ path('app_rdv_index') }}" class="btn btn-outline-secondary">
                                Annuler
                            </a>
                        </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>

