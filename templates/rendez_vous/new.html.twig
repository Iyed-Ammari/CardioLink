{% extends 'base.html.twig' %}

{% block title %}Nouveau Rendez-vous{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">üìÖ Prendre un Rendez-vous</h3>
                </div>
                <div class="card-body">
                    {# Affiche les erreurs globales (ex: m√©decin non dispo) #}
                    {% for message in app.flashes('danger') %}
                        <div class="alert alert-danger">
                            {{ message }}
                        </div>
                    {% endfor %}

                    {{ form_start(form) }}
                       
                        <div class="mb-3">
                            <label class="form-label">M√©decin</label>
                            {{ form_widget(form.medecin, {'attr': {'class': 'form-select'}}) }}
                            <div class="form-text text-muted">Choisissez votre praticien.</div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Date et Heure</label>
                                {{ form_widget(form.dateHeure, {'attr': {'class': 'form-control'}}) }}
                            </div>
                           
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Type de consultation</label>
                                {{ form_widget(form.type, {'attr': {'class': 'form-select', 'id': 'select-type'}}) }}
                            </div>
                        </div>

                        {# Ce bloc sera cach√© si T√©l√©m√©decine est choisi #}
                        <div class="mb-3" id="bloc-lieu">
                            <label class="form-label">Lieu du rendez-vous</label>
                            {{ form_widget(form.lieu, {'attr': {'class': 'form-select'}}) }}
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Motif / Remarques</label>
                            {{ form_widget(form.remarques, {'attr': {'class': 'form-control', 'rows': '3', 'placeholder': 'Ex: Douleurs thoraciques depuis 2 jours...'}}) }}
                        </div>

                        <div class="d-grid gap-2">
                            <button class="btn btn-success btn-lg" type="submit">
                                ‚úÖ Confirmer le rendez-vous
                            </button>
                            <a href="{{ path('app_rdv_index') }}" class="btn btn-outline-secondary">
                                Annuler
                            </a>
                        </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>

{# --- LE SCRIPT MAGIQUE --- #}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const selectType = document.getElementById('rendez_vous_type'); // L'ID g√©n√©r√© par Symfony
        const blocLieu = document.getElementById('bloc-lieu'); // Notre div contenant le lieu

        function toggleLieu() {
            // Si la valeur est 'T√©l√©m√©decine', on cache le lieu
            if (selectType.value === 'T√©l√©m√©decine') {
                blocLieu.style.display = 'none';
            } else {
                blocLieu.style.display = 'block';
            }
        }

        // On lance la fonction au chargement de la page (au cas o√π il y a une erreur et que le form revient rempli)
        toggleLieu();

        // On √©coute le changement
        selectType.addEventListener('change', toggleLieu);
    });
</script>
{% endblock %}