{% extends 'base.html.twig' %}

{% block title %}Liste des Rendez-vous{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0">üìÖ Liste des Rendez-vous</h3>
            <div class="d-flex gap-2">
                {# BOUTON PR√âDICTION POUR LE M√âDECIN #}
        {% if is_granted('ROLE_MEDECIN') %}
            <a href="{{ path('app_rdv_prediction') }}" class="btn btn-warning btn-sm">
                <i class="fas fa-magic"></i> Voir les pr√©visions IA
            </a>
        {% endif %}

                {# Bouton Nouveau RDV pour le Patient #}
                {% if is_granted('ROLE_PATIENT') %}
                    <a href="{{ path('app_rdv_new') }}" class="btn btn-light btn-sm">
                        <i class="fas fa-plus"></i> Prendre un rendez-vous
                    </a>
                {% endif %}
            </div>
        </div>

        <div class="card-body">
            {# ================= BARRE DE RECHERCHE ================= #}
            <form method="get" class="mb-4">
                <div class="input-group shadow-sm">
                    <input type="text" name="search" class="form-control" 
                           placeholder="üîé Rechercher par patient, m√©decin, statut, type..." 
                           value="{{ app.request.get('search') }}">
                    <button class="btn btn-primary" type="submit">Rechercher</button>
                    {% if app.request.get('search') %}
                        <a href="{{ path('app_rdv_index') }}" class="btn btn-outline-secondary">‚úñ</a>
                    {% endif %}
                </div>
            </form>

            {# ================= FLASH MESSAGES ================= #}
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
            {% endfor %}

            {# ================= TABLEAU ================= #}
            <div class="table-responsive">
                <table class="table table-bordered table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>
                                Date & Heure
                                <div class="btn-group btn-group-sm float-end">
                                    <a href="{{ path('app_rdv_index', app.request.query.all | merge({'sort':'dateHeure','order':'ASC'})) }}" class="btn btn-link p-0 text-decoration-none">‚¨ÜÔ∏è</a>
                                    <a href="{{ path('app_rdv_index', app.request.query.all | merge({'sort':'dateHeure','order':'DESC'})) }}" class="btn btn-link p-0 text-decoration-none">‚¨áÔ∏è</a>
                                </div>
                            </th>

                            {% if is_granted('ROLE_MEDECIN') %}
                                <th>Patient</th>
                            {% else %}
                                <th>M√©decin</th>
                            {% endif %}

                            <th>Type</th>
                            <th>Statut</th>
                            <th>Ordonnance</th>
                            <th>Actions RDV</th>
                        </tr>
                    </thead>

                    <tbody>
                    {% for rdv in rendez_vous %}
                        <tr>
                            <td>{{ rdv.dateHeure ? rdv.dateHeure|date('d/m/Y H:i') : '' }}</td>

                            <td>
                                {% if is_granted('ROLE_MEDECIN') %}
                                    <strong>{{ rdv.patient.nom|upper }}</strong> {{ rdv.patient.prenom }}
                                {% else %}
                                    Dr. <strong>{{ rdv.medecin.nom }}</strong> {{ rdv.medecin.prenom }}
                                {% endif %}
                            </td>

                            <td>
                                <span class="badge {{ rdv.type == 'T√©l√©m√©decine' ? 'bg-info text-dark' : 'bg-secondary' }}">
                                    <i class="fas {{ rdv.type == 'T√©l√©m√©decine' ? 'fa-video' : 'fa-hospital' }}"></i> {{ rdv.type }}
                                </span>
                            </td>

                            <td>
                                {% if is_granted('ROLE_MEDECIN') %}
                                    <form method="post" action="{{ path('app_rdv_update_status', {'id': rdv.id}) }}">
                                        <input type="hidden" name="_token" value="{{ csrf_token('update_status' ~ rdv.id) }}">
                                        <select name="statut" class="form-select form-select-sm" onchange="this.form.submit()">
                                            <option value="En attente" {{ rdv.statut == 'En attente' ? 'selected' : '' }}>En attente</option>
                                            <option value="Confirm√©" {{ rdv.statut == 'Confirm√©' ? 'selected' : '' }}>Confirm√©</option>
                                            <option value="Annul√©" {{ rdv.statut == 'Annul√©' ? 'selected' : '' }}>Annul√©</option>
                                            <option value="Compl√©t√©" {{ rdv.statut == 'Compl√©t√©' ? 'selected' : '' }}>Compl√©t√©</option>
                                        </select>
                                    </form>
                                {% else %}
                                    {% set color = 'secondary' %}
                                    {% if rdv.statut == 'Confirm√©' %}{% set color = 'success' %}
                                    {% elseif rdv.statut == 'En attente' %}{% set color = 'warning text-dark' %}
                                    {% elseif rdv.statut == 'Annul√©' %}{% set color = 'danger' %}
                                    {% endif %}
                                    <span class="badge bg-{{ color }}">{{ rdv.statut }}</span>
                                {% endif %}
                            </td>

                            <td>
                                {% if rdv.ordonnance %}
                                    <div class="btn-group">
                                        <a href="{{ path('ordonnance_show', {'id': rdv.ordonnance.id}) }}" class="btn btn-outline-info btn-sm">Consulter</a>
                                        {% if not is_granted('ROLE_MEDECIN') %}
                                            <a href="{{ path('ordonnance_pdf', {'id': rdv.ordonnance.id}) }}" class="btn btn-outline-secondary btn-sm">üìÑ</a>
                                        {% endif %}
                                    </div>
                                {% elseif is_granted('ROLE_MEDECIN') %}
                                    <a href="{{ path('ordonnance_new', {'rdvId': rdv.id}) }}" class="btn btn-success btn-sm">Cr√©er</a>
                                {% else %}
                                    <span class="text-muted small">Aucune</span>
                                {% endif %}
                            </td>

                            <td>
                                <div class="d-flex gap-1">
                                    {# BOUTON VISIO API #}
                                    {% if rdv.type == 'T√©l√©m√©decine' and rdv.lienVisio %}
                                        <a href="{{ rdv.lienVisio }}" target="_blank" class="btn btn-success btn-sm" title="Rejoindre la visio">
                                            <i class="fas fa-video"></i>
                                        </a>
                                    {% endif %}

                                    <a href="{{ path('app_rdv_edit', {'id': rdv.id}) }}" class="btn btn-outline-warning btn-sm" title="Modifier">‚úèÔ∏è</a>
                                    
                                    <form method="post" action="{{ path('app_rdv_delete', {'id': rdv.id}) }}" onsubmit="return confirm('Confirmer la suppression ?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ rdv.id) }}">
                                        <button class="btn btn-outline-danger btn-sm" title="Supprimer">üóëÔ∏è</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="text-center py-4 text-muted">
                                Aucun rendez-vous trouv√©.
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}